---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "thumbnail-img" : "{{ site.baseurl }}{{ post.thumbnail-img }}",
      "subtitle" : "{{ post.subtitle }}",
      "content" : {{ post.content | jsonify | strip_html }},
      "article" : "<div class='article col col-4 col-d-6 col-t-12 animate'><div class='article__inner'><div class='article__head'>{% assign current_year = 'now' | date: '%-Y' %}{% assign post_year = post.date | date: '%-Y' %}{% assign today = site.time | date: '%s' %}{% assign start = post.date | date: '%s' %}{% assign secondsSince = today | minus: start %}{% assign hoursSince = secondsSince | divided_by: 60 | divided_by: 60 %}{% assign daysSince = hoursSince | divided_by: 24  %}{% if daysSince <= 60 %} <time class='article__date' datetime='{{ post.date }}'>{{ post.date | date_to_string }}</time>{% else %}<time datetime='{{ post.date }}'></time>{% endif %}{% if post.youtubeurl And post.youtubeurl != "" And post.youtubeurl != nil %}<div class='video-icon'><div class='circle pulse'></div><div class='circle'><svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><polygon points='40,30 65,50 40,70'></polygon></svg></div></div>{% endif %}<a class='article__image' href='{{ post.url }}'> <img src='{{ post.thumbnail-img }}' alt='{{ post.title }}'> </a></div><div class='article__content'> <h2 class='article__title'><a href='{{ post.url }}'>{{ post.title }}</a> </h2><p class='article__excerpt'>{{ post.subtitle | truncatewords: 15 }}</p></div></div></div>"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]